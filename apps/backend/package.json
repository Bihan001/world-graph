    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/collections": "^5.1.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "concurrently": "^6.0.2",
